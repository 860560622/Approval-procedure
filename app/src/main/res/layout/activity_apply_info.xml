<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ApplyInfoActivity"
    >
    <include layout="@layout/head"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="申请课程"
        android:textSize="25dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="100dp"/>
    <TextView
        android:id="@+id/class_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#4094E4"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="100dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="课程教师"
        android:textSize="25dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="170dp"/>
    <TextView
        android:id="@+id/teacher_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="170dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="主管教师"
        android:textSize="25dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="240dp"/>
    <TextView
        android:id="@+id/manager_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="240dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="申请原因"
        android:textSize="25dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="310dp"/>
    <TextView
        android:id="@+id/apply_reason"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="310dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="审批状态"
        android:textSize="25dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="380dp"/>
    <TextView
        android:id="@+id/apply_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#4094E4"
        android:textSize="20dp"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="385dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="审批理由"
        android:textSize="25dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="450dp"/>
    <TextView
        android:id="@+id/read_reason"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="450dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="申请人"
        android:textSize="25dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="560dp"/>
    <TextView
        android:id="@+id/apply_st_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="560dp"/>
    <Button
        android:id="@+id/check"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="我知道了"
        android:layout_gravity="bottom"
        android:layout_marginBottom="60dp"
        android:layout_marginLeft="100dp"
        android:background="@drawable/tool_btn"
        android:textColor="@android:color/background_light"
        />
</FrameLayout>